# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-key-here
USE_GPT_RECOMMENDATIONS=true
ENABLED_GPT_CHECKS=Keyphrase in Title,Keyphrase in Meta Description,Keyphrase in Introduction,Keyphrase in H1 Heading,Keyphrase in H2 Headings

# Webflow API Configuration
VITE_WEBFLOW_API_KEY=your-webflow-api-key
VITE_WEBFLOW_SITE_ID=your-webflow-site-id
VITE_WEBFLOW_CLIENT_ID=your-webflow-client-id
VITE_WEBFLOW_EXTENSION=false
WEBFLOW_CLIENT_SECRET=your-webflow-client-secret
WEBFLOW_REDIRECT_URI=https://your-redirect-uri.com

# Development mode flag
DEV=true

# Worker configuration
WORKER_ENV=development
WORKER_DEBUG=true
WORKER_LOG_LEVEL=info
WORKER_ALLOWED_DOMAINS=example.com,yoursite.com,*.webflow.io,webflow.com
WORKER_MAX_SCRAPE_SIZE=2000000
